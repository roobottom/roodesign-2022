{% from "../includes/opengraph.njk" import opengraph as opengraph %}
<!doctype html>
<html lang="en-gb" data-scroll="0">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{{ title }} -  Roodesign</title>
        <link rel="stylesheet" href="/assets/css/roodesign.css">
        <link href="{{ global.cdn }}prismjs@v1.x/themes/prism.css" rel="stylesheet" />
        
        {{ opengraph({
          type: og.type,
          'og:url': og.url,
          'og:site_name': 'Roodesign',
          'og:locale': 'en_GB',
          'og:title': title,
          'og:description': og.description or introduction or 'Roodesign: Design for humans',
          'og:image': og.image.url,
          'og:image:width': '1280',
          'og:image:height': '680',
          'og:image:alt': og.image.alt
        }) }}
    </head>
    <body class="no-js template-{{ section_id }}">
        <header class="container">
            {% include "main_navigation.njk" %}
        </header>
        <main class="container">
            {% block content %}
            {% endblock %}
            <p>
        </main>
        <footer class="container footer">
            <svg width="32" height="38" xmlns="http://www.w3.org/2000/svg" class="footer-badge">
                <g fill="none" fill-rule="evenodd">
                    <path d="M15.735 8.851L27.993 21.2 15.735 33.549 3.477 21.2 15.735 8.851z" fill="var(--badge-bg)"></path>
                    <path d="M15.735 8.842l4.36-4.39 7.9 7.953-12.26 12.343L3.476 12.405l7.9-7.953 4.36 4.39z" fill="var(--badge-bg)"></path>
                    <path stroke="currentColor" d="M15.735 12.4l8.736 8.8-8.736 8.8L7 21.2z"></path>
                    <path stroke="currentColor" d="M20.095 8l4.376 4.405-8.736 8.795L7 12.405 11.375 8l4.36 4.39z"></path>
                </g>
            </svg>
            <div class="footer-content">
                <p>&copy; Jon Roobottom. <a href="https://roobottom.com" rel="me">Visit my personal website.</a></p>
            </div>

            <h4 class="footer-title" id="explore-this-site">Explore this site</h4>
            <nav aria-labelledby="explore-this-site">
                <ul class="footer-navigation">
                  {% for item in navigation.footer %}
                    <li><a href="{{ item.url }}">{{ item.title }}</a></li>
                  {% endfor %}  
                </ul>
            </nav>

            <h4 class="footer-title" id="explore-this-site-by-subject">Explore this site by subject</h4>
            <nav aria-labelledby="explore-this-site-by-subject">
                <ul class="footer-navigation">
                    {% for tag in collections.tags %}
                        <li><a href="/subjects/{{ tag.title | slugify }}">{{ tag.title | title }}</a></li>
                    {% endfor %}
                </ul>
            </nav>

        </footer>
        <script src="{{ global.cdn }}prismjs@v1.x/components/prism-core.min.js"></script>
	    <script src="{{ global.cdn }}prismjs@v1.x/plugins/autoloader/prism-autoloader.min.js"></script>
        {% if section_id == 'contact' %}
        <script src="/assets/js/contact-form.js"></script>
        {% endif %}
    </body>
</html>